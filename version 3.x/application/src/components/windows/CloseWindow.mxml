<?xml version="1.0"?>
<s:Window xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="components.*" xmlns:tabs="components.tabs.*" width="250" height="100" title="Monster Debugger - Close" showStatusBar="false" creationComplete="onCreationComplete()" initialize="onInitialize()" backgroundColor="#f5f5f5">
	<fx:Script>
		<![CDATA[

			import com.demonsters.debugger.MonsterDebuggerUtils;

			
			override protected function commitProperties():void
			{
				maximizable = false;
				minimizable = false;
				resizable = false;
				super.commitProperties();
			}
			
			
			private function onInitialize():void
			{
				visible = false;
			}
			

			private function onCreationComplete():void
			{
				MonsterDebuggerUtils.checkWindow(nativeWindow);
				visible = true;
				activate();
			}


			private function onYes(e:MouseEvent):void
			{
				// NativeApplication.nativeApplication.exit();
			}
			

			private function onNo(e:MouseEvent):void
			{
				close();
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" gap="20" horizontalAlign="center"/>
	</s:layout>
	<s:Label text="Are your sure you want to exit?"/>
	<s:SkinnableContainer>
		<s:layout>
			<s:HorizontalLayout horizontalAlign="center" gap="10" verticalAlign="middle"/>
		</s:layout>
		<s:Button label="Yes" height="20" width="50" skinClass="skins.button.DefaultButton" click="onYes(event)"/>
		<s:Button label="No" height="20" width="50" skinClass="skins.button.DefaultButton" click="onNo(event)"/>
	</s:SkinnableContainer>
</s:Window>